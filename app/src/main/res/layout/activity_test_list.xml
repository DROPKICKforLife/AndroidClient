<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/basicBackground"
    tools:context="com.dropkick.soma.somaproject.ui.TestListActivity">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="23sp"
        android:textColor="@color/white"
        tools:text="DAY 1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="18dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/currPageNumberView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                tools:text="02"/>

            <TextView
                android:id="@+id/totalPageNumberView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/currPageNumberView"
                android:layout_alignParentTop="true"
                tools:text="/06"
                />

        </RelativeLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>


</LinearLayout>
